<Project Sdk="Microsoft.NET.Sdk">
	<PropertyGroup>
    <!-- It must be `TargetFrameworks` plural to work on macos -->
    <!-- Error MSB6004 : The specified task executable location "/macosx_x64/protoc" is invalid. -->
    <!--suppress MsbuildTargetFrameworkTagInspection-->
    <TargetFrameworks>net10.0</TargetFrameworks>
		<LangVersion>preview</LangVersion>
		<ImplicitUsings>enable</ImplicitUsings>
		<Nullable>enable</Nullable>
		<Deterministic>true</Deterministic>
		<InvariantGlobalization>true</InvariantGlobalization>
	</PropertyGroup>
	<ItemGroup>
		<PackageReference Include="Kurrent.Surge.Core" />
		<PackageReference Include="Eventuous.Application" />
		<PackageReference Include="Eventuous.Extensions.AspNetCore" />
		<PackageReference Include="Eventuous.Extensions.DependencyInjection" />
		<PackageReference Include="System.Linq.Async">
			<ExcludeAssets>compile</ExcludeAssets>
		</PackageReference>
	</ItemGroup>
	<ItemGroup>
	  <ProjectReference Include="..\KurrentDB.Core\KurrentDB.Core.csproj" />
	</ItemGroup>
</Project>
