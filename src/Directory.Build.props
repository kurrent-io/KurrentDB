<Project>
	<PropertyGroup>
		<Configuration Condition=" '$(Configuration)' == '' ">Debug</Configuration>
		<DebugType Condition=" '$(Configuration)' == 'Debug' ">full</DebugType>
		<DebugType Condition=" '$(Configuration)' == 'Release' ">pdbonly</DebugType>
		<Authors>Kurrent, Inc</Authors>
		<PackageIconUrl>ouro.png</PackageIconUrl>
		<PackageLicenseFile>LICENSE.md</PackageLicenseFile>
		<PackageProjectUrl>https://kurrent.io</PackageProjectUrl>
		<PackageRequireLicenseAcceptance>false</PackageRequireLicenseAcceptance>
		<Copyright>Copyright 2012-2025 Kurrent, Inc</Copyright>
		<PackageReleaseNotes>https://docs.kurrent.io/server/latest/release-schedule/release-notes</PackageReleaseNotes>
		<TargetFramework>net10.0</TargetFramework>
		<LangVersion>14.0</LangVersion>
		<Platforms>AnyCPU;x64;ARM64</Platforms>
		<IsPackable>false</IsPackable>
		<VersionPrefix>26.0.0</VersionPrefix>
		<VersionSuffix>prerelease</VersionSuffix>
		<!-- Adjust for SYSLIB0057 separately to .NET 10 upgrade -->
		<!-- Adjust for XUNIT1051 separately. Lots of lines but very simple -->
		<NoWarn>SYSLIB0057;xUnit1051</NoWarn>

		<TestingPlatformCommandLineArguments>$(TestingPlatformCommandLineArguments) @"$(MSBuildThisFileDirectory)../ci/ci.rsp"</TestingPlatformCommandLineArguments>
		<!-- we put these two here and not only for explicitly labelled test projects to make sure that -->
		<!-- we don't accidentally mix MTP with VSTest, which is not supported -->
		<!-- tell xunit projects to use MTP -->
		<UseMicrosoftTestingPlatformRunner>true</UseMicrosoftTestingPlatformRunner>
		<!-- tell nunit projects to use MTP -->
		<EnableNUnitRunner>true</EnableNUnitRunner>
	</PropertyGroup>

	<!-- TUnit -->
	<ItemGroup Condition="'$(IsKurrentTUnit)' == 'True'">
		<PackageReference Include="TUnit" />
	</ItemGroup>

	<!-- XUnit -->
	<ItemGroup Condition="'$(IsKurrentXUnit)' == 'True'">
		<PackageReference Include="xunit.v3" />
	</ItemGroup>

	<!-- NUnit -->
	<PropertyGroup Condition="'$(IsKurrentNUnit)' == 'True'">
		<TestingPlatformCommandLineArguments>$(TestingPlatformCommandLineArguments) --settings $(MSBuildThisFileDirectory)../ci/ci.runsettings</TestingPlatformCommandLineArguments>
	</PropertyGroup>
	<ItemGroup Condition="'$(IsKurrentNUnit)' == 'True'">
		<PackageReference Include="NUnit" />
		<PackageReference Include="NUnit3TestAdapter" />
	</ItemGroup>

	<!-- All test projects -->
	<ItemGroup Condition="'$(IsKurrentTUnit)' == 'True' Or '$(IsKurrentXUnit)' == 'True' Or '$(IsKurrentNUnit)' == 'True'">
		<PackageReference Include="Microsoft.Testing.Extensions.CodeCoverage" />
		<PackageReference Include="Microsoft.Testing.Extensions.CrashDump" />
		<PackageReference Include="Microsoft.Testing.Extensions.HangDump" />
		<PackageReference Include="Microsoft.Testing.Extensions.TrxReport" />
	</ItemGroup>

	<ItemGroup Condition="'$(IsPlugin)' == 'true'">
		<ProjectReference Include="$(MSBuildThisFileDirectory)\KurrentDB.Plugins\KurrentDB.Plugins.csproj" />
	</ItemGroup>

	<ItemGroup Condition="'$(IsPluginsTestProject)' == 'true'">
		<ProjectReference Include="..\KurrentDB.Plugins.TestHelpers\KurrentDB.Plugins.TestHelpers.csproj" />
	</ItemGroup>

	<ItemGroup Label="Default Packages">
		<PackageReference Include="JetBrains.Annotations" PrivateAssets="All" />
		<Using Include="JetBrains.Annotations" />
	</ItemGroup>
</Project>
