<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <!-- It must be `TargetFrameworks` plural to work on macos -->
    <!-- Error MSB6004 : The specified task executable location "/macosx_x64/protoc" is invalid. -->
    <!--suppress MsbuildTargetFrameworkTagInspection-->
    <TargetFramework>net8.0</TargetFramework>
    <LangVersion>preview</LangVersion>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <JsonSerializerIsReflectionEnabledByDefault>true</JsonSerializerIsReflectionEnabledByDefault>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="FluentValidation.DependencyInjectionExtensions" Version="11.11.0" />
    <PackageReference Include="Grpc.AspNetCore" Version="2.64.0" />
    <PackageReference Include="Kurrent.Quack" Version="0.0.0-alpha.0.13" />
    <PackageReference Include="Kurrent.Surge.DuckDB" Version="1.1.0-alpha" />
    <PackageReference Include="Kurrent.Surge.Core" Version="1.1.0-alpha" />
    <PackageReference Include="NJsonSchema" Version="11.2.0" />

		<!-- Required to remove conflicts -->
    <PackageReference Include="Google.Api.CommonProtos" Version="2.15.0" PrivateAssets="All" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\KurrentDB.Surge\KurrentDB.Surge.csproj" />
    <ProjectReference Include="..\KurrentDB.SchemaRegistry.Protocol\KurrentDB.SchemaRegistry.Protocol.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Using Include="Kurrent.Surge" />
    <Using Include="Microsoft.Extensions.Logging" />
    <Using Include="Microsoft.Extensions.Logging.Abstractions" />
  </ItemGroup>
</Project>
